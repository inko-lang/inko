fn pub tests(t: mut Tests) {
  t.test('ChaCha.encrypt', fn (t) {
    for (key, nonce, counter, inp, out) in chacha_test_data {
      let key = ByteArray.from_array(key)
      let nonce = ByteArray.from_array(nonce)
      let cipher = ChaCha.new(key, nonce)
      let input = ByteArray.from_array(inp)
      let output = ByteArray.from_array(out)

      cipher.counter = counter
      cipher.encrypt(input)
      t.equal(input, output)
    }
  })

  t.test('ChaCha.decrypt', fn (t) {
    for (key, nonce, counter, inp, out) in chacha_test_data {
      let key = ByteArray.from_array(key)
      let nonce = ByteArray.from_array(nonce)
      let cipher = ChaCha.new(key, nonce)
      let input = ByteArray.from_array(inp)
      let output = ByteArray.from_array(out)

      cipher.counter = counter
      cipher.decrypt(output)
      t.equal(output, input)
    }
  })

  t.test('ChaCha.twelve_rounds', fn (t) {
    let key = ByteArray.filled(with: 1, times: 32)
    let nonce = ByteArray.filled(with: 1, times: 12)
    let cipher = ChaCha.twelve_rounds(key, nonce)
    let secret = 'hello'.to_byte_array

    cipher.encrypt(secret)
    cipher.counter = 0
    cipher.decrypt(secret)
    t.equal(secret.into_string, 'hello')
  })

  t.test('ChaCha.encrypt with a very large block counter', fn (t) {
    let key = ByteArray.filled(with: 1, times: 32)
    let nonce = ByteArray.filled(with: 1, times: 12)
    let cipher = ChaCha.new(key, nonce)
    let secret = 'hello'.to_byte_array

    cipher.counter = INT_MAX - 10
    cipher.encrypt(secret)
    cipher.counter = INT_MAX - 10
    cipher.decrypt(secret)

    t.equal(secret.to_string, 'hello')
  })

  t.test('chacha.hchacha20', fn (t) {
    let key = ByteArray.from_array(
      [
        0x00, 0x01, 0x02, 0x03, 0x04, 0x05, 0x06, 0x07, 0x08, 0x09, 0x0A, 0x0B,
        0x0C, 0x0D, 0x0E, 0x0F, 0x10, 0x11, 0x12, 0x13, 0x14, 0x15, 0x16, 0x17,
        0x18, 0x19, 0x1A, 0x1B, 0x1C, 0x1D, 0x1E, 0x1F,
      ],
    )

    let nonce = ByteArray.from_array(
      [
        0x00, 0x00, 0x00, 0x09, 0x00, 0x00, 0x00, 0x4A, 0x00, 0x00, 0x00, 0x00,
        0x31, 0x41, 0x59, 0x27,
      ],
    )

    let expected = ByteArray.from_array(
      [
        0x82, 0x41, 0x3B, 0x42, 0x27, 0xB2, 0x7B, 0xFE, 0xD3, 0x0E, 0x42, 0x50,
        0x8A, 0x87, 0x7D, 0x73, 0xA0, 0xF9, 0xE4, 0xD5, 0x8A, 0x74, 0xA8, 0x53,
        0xC1, 0x2E, 0xC4, 0x13, 0x26, 0xD3, 0xEC, 0xDC,
      ],
    )

    t.equal(hchacha20(key, nonce), expected)
  })

  t.test('XChaCha.encrypt', fn (t) {
    for (key, nonce, counter, inp, out) in xchacha_test_data {
      let key = ByteArray.from_array(key)
      let nonce = ByteArray.from_array(nonce)
      let cipher = XChaCha.new(key, nonce)
      let input = ByteArray.from_array(inp)
      let output = ByteArray.from_array(out)

      cipher.counter = counter
      cipher.encrypt(input)
      t.equal(input, output)
    }
  })

  t.test('XChaCha.decrypt', fn (t) {
    for (key, nonce, counter, inp, out) in xchacha_test_data {
      let key = ByteArray.from_array(key)
      let nonce = ByteArray.from_array(nonce)
      let cipher = XChaCha.new(key, nonce)
      let input = ByteArray.from_array(inp)
      let output = ByteArray.from_array(out)

      cipher.counter = counter
      cipher.decrypt(output)
      t.equal(output, input)
    }
  })
