    t.equal('foo‚Üíbar‚Üíbaz'.split('bar').to_array, ['foo‚Üí', '‚Üíbaz'])
    t.equal('foo//bar/baz'.split('/').to_array, ['foo', '', 'bar', 'baz'])
    t.equal('foo/bar/baz'.split('').to_array, ['foo/bar/baz'])
    t.equal('foo/bar'.split('///////////////').to_array, ['foo/bar'])
    t.equal('foo/'.split('/').to_array, ['foo'])
    t.equal('foo//'.split('/').to_array, ['foo', ''])
    t.equal('foo///'.split('/').to_array, ['foo', '', ''])
    t.equal('foo//'.split('//').to_array, ['foo'])
    t.equal('foo///'.split('//').to_array, ['foo', '/'])
