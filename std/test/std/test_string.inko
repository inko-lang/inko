    t.equal(hash('foo'), hash('foo'))
  }

  t.test('String.+') fn (t) {
    t.equal('foo' + 'bar', 'foobar')
    t.equal('Ã„' + 'Ã„', 'Ã„Ã„')
    t.equal('A' + 'Ã„', 'AÃ„')
    t.equal('ì¿ ' + 'í‚¤', 'ì¿ í‚¤')
    t.equal('ğŸ˜ƒ' + 'ğŸ˜ƒ', 'ğŸ˜ƒğŸ˜ƒ')
