  t.test('String.hash', fn (t) {
    for
      v
    in
      [
        'a',
        'aa',
        'aaa',
        'aaaa',
        'aaaa',
        'aaaaa',
        'aaaaaa',
        'aaaaaaa',
        'aaaaaaaa',
        'aaaaaaaaa',
        'aaaaaaaaaa',
        'aaaaaaaaaaa',
      ]
    {
      t.equal(hash(v), hash(v))
    }

    t.not_equal(hash('hello'), hash('world'))
    t.not_equal(hash(('ab', 'c')), hash(('a', 'bc')))
  })

