  t.test('String.slice') fn (t) {
    t.equal('hello_world'.slice(start: 0, chars: 5), 'hello')
    t.equal('hello_world'.slice(start: 3, chars: 5), 'lo_wo')
    t.equal('hello_world'.slice(start: 0, chars: 20), 'hello_world')
