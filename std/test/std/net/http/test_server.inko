fn request(raw: RawRequest, limits: Limits, random: mut Random) -> Request {
  let addr = Address.Ip(SocketAddress(ip: IpAddress.v4(0, 0, 0, 0), port: 80))

  Request.new(addr, raw, limits, random)
}

fn empty_request(limits: Limits, random: mut Random) -> Request {
  request_with_method(limits, Get, random)
}

fn empty_body -> Body {
  Body.bounded(Reader.new(Buffer.new('')), size: 0, limit: 0)
}

fn request_with_method(
  limits: Limits,
  method: Method,
  random: mut Random,
) -> Request {
  request(
    RawRequest(
      method: method,
      uri: Uri.parse('/').or_panic,
      version: Version(1, 1),
      headers: HeaderMap.new,
      body: empty_body,
    ),
    limits,
    random,
  )
}

fn etag -> String {
