  t.test('WebsocketResponse.protocols', fn (t) {
    let limits = Limits.new
    let rng = Random.new
    let req = empty_request(limits, rng)
    let mut up = WebsocketResponse.new(req)

    t.equal(up.protocols, Set.new)

    up = up.protocols(['foo', 'foo', 'bar'])
    t.equal(up.protocols, Set.from_array(['foo'.to_slice, 'bar'.to_slice]))
  })

  t.test('WebsocketResponse.max_protocols', fn (t) {
    let limits = Limits.new
    let rng = Random.new
    let req = empty_request(limits, rng)
    let mut up = WebsocketResponse.new(req)

    t.equal(up.max_protocols, 8)

    up = up.max_protocols(16)
    t.equal(up.max_protocols, 16)
  })

  t.test('WebsocketResponse.then', fn (t) {
    let key = 'HXmtbPKLapNNEGJO+iIyfw==' # head -c 16 /dev/random | base64
    let tests = [
      # Valid requests
      (
        Get,
        Version(1, 1),
        [
          (Header.connection, 'upgrade'),
          (Header.upgrade, 'websocket'),
          (Header.sec_websocket_key, key),
          (Header.sec_websocket_version, WEBSOCKET_VERSION),
        ],
        Status.switching_protocols,
        [
          (Header.upgrade, 'websocket'),
          (Header.connection, 'Upgrade'),
          (Header.sec_websocket_accept, 'hnYOgo1dpWI0hQE705FKai309zM='),
        ],
      ),
      (
        Get,
        Version(1, 1),
        [
          (Header.connection, 'upgrade'),
          (Header.upgrade, 'websocket'),
          (Header.sec_websocket_key, key),
          (Header.sec_websocket_version, WEBSOCKET_VERSION),
          (Header.origin, 'http://0.0.0.0:80'),
          (Header.host, '0.0.0.0:80'),
        ],
        Status.switching_protocols,
        [
          (Header.upgrade, 'websocket'),
          (Header.connection, 'Upgrade'),
          (Header.sec_websocket_accept, 'hnYOgo1dpWI0hQE705FKai309zM='),
        ],
      ),
      (
        Get,
        Version(1, 1),
        [
          (Header.connection, 'keep-alive, upgrade'),
          (Header.upgrade, 'websocket'),
          (Header.sec_websocket_key, key),
          (Header.sec_websocket_version, WEBSOCKET_VERSION),
        ],
        Status.switching_protocols,
        [
          (Header.upgrade, 'websocket'),
          (Header.connection, 'Upgrade'),
          (Header.sec_websocket_accept, 'hnYOgo1dpWI0hQE705FKai309zM='),
        ],
      ),
      (
        Get,
        Version(1, 1),
        [
          (Header.connection, 'upgrade'),
          (Header.upgrade, 'websocket'),
          (Header.sec_websocket_key, key),
          (Header.sec_websocket_version, WEBSOCKET_VERSION),
          (Header.sec_websocket_protocol, 'foo, bar'),
          (Header.sec_websocket_protocol, 'baz'),
        ],
        Status.switching_protocols,
        [
          (Header.upgrade, 'websocket'),
          (Header.connection, 'Upgrade'),
          (Header.sec_websocket_protocol, 'bar'),
        ],
      ),

      # Invalid requests
      (
        Post,
        Version(1, 1),
        [
          (Header.connection, 'upgrade'),
          (Header.upgrade, 'websocket'),
          (Header.sec_websocket_key, key),
          (Header.sec_websocket_version, WEBSOCKET_VERSION),
        ],
        Status.method_not_allowed,
        [],
      ),
      (
        Get,
        Version(1, 0),
        [
          (Header.connection, 'upgrade'),
          (Header.upgrade, 'websocket'),
          (Header.sec_websocket_key, key),
          (Header.sec_websocket_version, WEBSOCKET_VERSION),
        ],
        Status.upgrade_required,
        [],
      ),
      (
        Get,
        Version(1, 1),
        [
          (Header.connection, 'oops'),
          (Header.upgrade, 'websocket'),
          (Header.sec_websocket_key, key),
          (Header.sec_websocket_version, WEBSOCKET_VERSION),
        ],
        Status.bad_request,
        [],
      ),
      (
        Get,
        Version(1, 1),
        [
          (Header.connection, 'upgrade'),
          (Header.upgrade, 'oops'),
          (Header.sec_websocket_key, key),
          (Header.sec_websocket_version, WEBSOCKET_VERSION),
        ],
        Status.bad_request,
        [],
      ),
      (
        Get,
        Version(1, 1),
        [
          (Header.connection, 'upgrade'),
          (Header.upgrade, 'websocket'),
          (Header.sec_websocket_key, 'foo'),
          (Header.sec_websocket_version, WEBSOCKET_VERSION),
        ],
        Status.bad_request,
        [],
      ),
      (
        Get,
        Version(1, 1),
        [
          (Header.connection, 'upgrade'),
          (Header.upgrade, 'websocket'),
          (Header.sec_websocket_key, key),
          (Header.sec_websocket_version, WEBSOCKET_VERSION),
          (Header.origin, 'http://0.0.0.0:80'),
          (Header.host, '1.2.3.4:80'),
        ],
        Status.forbidden,
        [],
      ),
      (
        Get,
        Version(1, 1),
        [
          (Header.connection, 'upgrade'),
          (Header.upgrade, 'websocket'),
          (Header.sec_websocket_key, key),
          (Header.sec_websocket_version, '14'),
        ],
        Status.upgrade_required,
        [
          (Header.upgrade, 'websocket'),
          (Header.connection, 'Upgrade'),
          (Header.sec_websocket_version, WEBSOCKET_VERSION),
        ],
      ),
    ]

    let rng = Random.new
    let limits = Limits.new

    for (meth, ver, headers, exp_status, exp_headers) in tests {
      let req = request(
        RawRequest(
          method: meth,
          uri: Uri.parse('/').or_panic,
          version: ver,
          headers: HeaderMap.new,
          body: empty_body,
        ),
        limits,
        rng,
      )

      for (name, val) in headers { req.data.headers.add(name, val) }

      let resp = WebsocketResponse
        .new(req)
        .protocols(['bar'])
        .max_protocols(2)
        .then(fn (_) {})

      t.equal(resp.status, exp_status)

      for (name, val) in exp_headers {
        t.equal(resp.headers.get(name), Result.Ok(val))
      }
    }
  })
